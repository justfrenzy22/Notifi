<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="YansInputLayout"  parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" >
        <item name="boxBackgroundColor">#111111</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="colorContainer">@color/inp_bg_color</item>
        <item name="android:textColor">#727272</item>
        <item name="android:layout_width">327dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="boxCornerRadiusTopStart">40dp</item>
        <item name="boxCornerRadiusTopEnd">40dp</item>
        <item name="boxCornerRadiusBottomStart">40dp</item>
        <item name="boxCornerRadiusBottomEnd">40dp</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
    <style name="YansInput" parent="Widget.AppCompat.EditText" >
        <item name="android:textColor">#727272</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="YansButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">15sp</item>
        <item name="boxCornerRadiusTopStart">40dp</item>
        <item name="boxCornerRadiusTopEnd">40dp</item>
        <item name="boxCornerRadiusBottomStart">40dp</item>
        <item name="boxCornerRadiusBottomEnd">40dp</item>
        <item name="background">@drawable/blue_gradient</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="YansButtonLayout" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">327dp</item>
        <item name="android:layout_height">50dp</item>
<!--        <item name="background">@drawable/blue_gradient</item>-->
    </style>
</resources>